varnishtest "Test VCL temperature and discard."

server s1 {
   rxreq
   txresp
} -repeat 1 -start

varnish v1 -vcl+backend {
    import redis from "${vmod_topbuild}/src/.libs/libvmod_redis.so";

    sub vcl_init {
        redis.subnets(
            masks={""});

        redis.sentinels(
            locations={""},
            period=0,
            connection_timeout=500,
            command_timeout=0);

        new db1 = redis.db(
            location="${redis_master1_ip}:${redis_master1_port}",
            type=master,
            connection_timeout=500,
            connection_ttl=0,
            command_timeout=0,
            max_command_retries=0,
            shared_connections=false,
            max_connections=1,
            password="",
            sickness_ttl=0,
            ignore_slaves=false,
            max_cluster_hops=0);

        new db2 = redis.db(
            location="${redis_master2_ip}:${redis_master2_port}",
            type=master,
            connection_timeout=500,
            connection_ttl=0,
            command_timeout=0,
            max_command_retries=0,
            shared_connections=true,
            max_connections=32,
            password="",
            sickness_ttl=0,
            ignore_slaves=false,
            max_cluster_hops=0);
    }
} -start

varnish v1 -vcl+backend {
}

varnish v1 -cliok "vcl.state vcl1 cold"

varnish v1 -cliok "vcl.use vcl1"

varnish v1 -cliok "vcl.use vcl2"

varnish v1 -cliok "vcl.discard vcl1"

varnish v1 -expect MGT.child_panic == 0
